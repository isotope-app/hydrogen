{
  "version": "1.0.0-beta-2",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "spack",
    "lint": "rome check src/",
    "format": "rome format src/ --write",
    "prepare": "husky install && yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "name": "@isotope-app/hydrogen",
  "author": "ivy",
  "module": "dist/hydrogen.esm.js",
  "repository": "https://github.com/isotope-app/hydrogen.git",
  "size-limit": [
    {
      "path": "dist/hydrogen.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/hydrogen.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@size-limit/preset-small-lib": "^8.1.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.24",
    "@types/msgpack-lite": "^0.1.8",
    "husky": "^8.0.2",
    "rome": "^11.0.0",
    "size-limit": "^8.1.0",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@metamask/eth-sig-util": "^5.0.2",
    "msgpack-lite": "^0.1.26"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
